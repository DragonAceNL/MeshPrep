<Window x:Class="MeshPrep.POC.Preview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
        mc:Ignorable="d"
        Title="MeshPrep POC-04: 3D Preview (SharpDX)" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Background="#F0F0F0">
            <Button x:Name="BtnOpen" Content="ðŸ“‚ Open Model" Click="BtnOpen_Click" Padding="10,5" Margin="2"/>
            <Separator/>
            <ToggleButton x:Name="BtnWireframe" Content="ðŸ”² Wireframe" Click="BtnWireframe_Click" Padding="10,5" Margin="2"/>
            <ToggleButton x:Name="BtnCompare" Content="âš–ï¸ Compare Mode" Click="BtnCompare_Click" Padding="10,5" Margin="2"/>
            <Separator/>
            <Button x:Name="BtnZoomExtents" Content="ðŸ” Zoom Fit" Click="BtnZoomExtents_Click" Padding="10,5" Margin="2"/>
            <Button x:Name="BtnResetCamera" Content="ðŸ  Reset View" Click="BtnResetCamera_Click" Padding="10,5" Margin="2"/>
            <Separator/>
            <Button x:Name="BtnTestHighlight" Content="ðŸ”´ Test Highlight" Click="BtnTestHighlight_Click" Padding="10,5" Margin="2"/>
            <Separator/>
            <Label Content="Test Models:" VerticalAlignment="Center"/>
            <ComboBox x:Name="CboTestModels" Width="200" SelectionChanged="CboTestModels_SelectionChanged" Margin="5,0"/>
        </ToolBar>
        
        <!-- Main Content - Single or Comparison View -->
        <Grid Grid.Row="1" x:Name="ViewportContainer">
            <!-- Single Viewport (default) -->
            <Grid x:Name="SingleViewContainer">
                <hx:Viewport3DX x:Name="MainViewport"
                Camera="{Binding Camera}"
                CoordinateSystemLabelForeground="White"
                ShowCoordinateSystem="True"
                ShowViewCube="False"
                ZoomExtentsWhenLoaded="True"
                                BackgroundColor="#FF2D2D30"
                                EnableSwapChainRendering="True"
                                ShowFrameRate="True"
                                FXAALevel="Low">
                    <hx:Viewport3DX.InputBindings>
                        <KeyBinding Key="F" Command="hx:ViewportCommands.ZoomExtents"/>
                        <KeyBinding Key="R" Command="hx:ViewportCommands.Reset"/>
                    </hx:Viewport3DX.InputBindings>
                    <hx:DirectionalLight3D Direction="-1,-1,-1" Color="White"/>
                    <hx:DirectionalLight3D Direction="1,1,1" Color="#404040"/>
                    <hx:AmbientLight3D Color="#202020"/>
                    <hx:LineGeometryModel3D x:Name="GridLines" Geometry="{Binding GridGeometry}" Color="Gray" Thickness="0.5"/>
                    <hx:MeshGeometryModel3D x:Name="MainModel" Geometry="{Binding MeshGeometry}" Material="{Binding MeshMaterial}"/>
                    <hx:LineGeometryModel3D x:Name="WireframeModel" Geometry="{Binding WireframeGeometry}" Color="Black" Thickness="0.5" Visibility="Collapsed"/>
                    <hx:MeshGeometryModel3D x:Name="HighlightModel" Geometry="{Binding HighlightGeometry}" Material="{Binding HighlightMaterial}"/>
                </hx:Viewport3DX>
            </Grid>
            
            <!-- Comparison View (hidden by default) -->
            <Grid x:Name="CompareViewContainer" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Viewport - Original -->
                <Grid Grid.Column="0">
                    <hx:Viewport3DX x:Name="LeftViewport"
                    Camera="{Binding LeftCamera}"
                    ShowCoordinateSystem="True"
                    ShowViewCube="False"
                    ZoomExtentsWhenLoaded="True"
                                    BackgroundColor="#FF2D2D30"
                                    EnableSwapChainRendering="True">
                        <hx:DirectionalLight3D Direction="-1,-1,-1" Color="White"/>
                        <hx:AmbientLight3D Color="#202020"/>
                        <hx:MeshGeometryModel3D x:Name="LeftModel" Geometry="{Binding MeshGeometry}" Material="{Binding LeftMaterial}"/>
                    </hx:Viewport3DX>
                    <Label Content="ORIGINAL" Foreground="White" Background="#80000000" 
                           HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontWeight="Bold"/>
                </Grid>
                
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FF3F3F46"/>
                
                <!-- Right Viewport - Modified -->
                <Grid Grid.Column="2">
                    <hx:Viewport3DX x:Name="RightViewport"
                    Camera="{Binding RightCamera}"
                    ShowCoordinateSystem="True"
                    ShowViewCube="False"
                    ZoomExtentsWhenLoaded="True"
                                    BackgroundColor="#FF2D2D30"
                                    EnableSwapChainRendering="True">
                        <hx:DirectionalLight3D Direction="-1,-1,-1" Color="White"/>
                        <hx:AmbientLight3D Color="#202020"/>
                        <hx:MeshGeometryModel3D x:Name="RightModel" Geometry="{Binding MeshGeometry}" Material="{Binding RightMaterial}"/>
                    </hx:Viewport3DX>
                    <Label Content="MODIFIED" Foreground="White" Background="#80000000" 
                           HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontWeight="Bold"/>
                </Grid>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#FF007ACC">
            <StatusBarItem>
                <TextBlock x:Name="TxtStatus" Text="Ready - Load a model to begin" Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="TxtTriangles" Text="Triangles: 0" Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="TxtVertices" Text="Vertices: 0" Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="TxtLoadTime" Text="Load: 0ms" Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="TxtMemory" Text="Memory: 0 MB" Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="TxtFps" Text="FPS: --" Foreground="White" FontWeight="Bold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
